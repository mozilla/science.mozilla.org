{
  "name": "science.mozilla.org",
  "version": "1.0.0",
  "description": "Mozilla Science",
  "author": "Mozilla",
  "license": "MPL",
  "scripts": {
    "start": "npm run build && npm-run-all --parallel server:dev watch:**",
    "build": "npm run build:js && npm run build:scss && npm run build:static && npm run build:assets",
    "build:js": "webpack",
    "build:scss": "node-sass app/scss/main.scss dist/css/main.css && postcss --use autoprefixer --autoprefixer.browsers '> 5%' -o dist/css/main.css dist/css/main.css",
    "build:static": "cp -r node_modules/mozmaker/dest/css dist/ && cp app/index.html dist/index.html",
    "build:assets": "cp -r app/assets dist/",
    "server:dev": "live-server ./dist --port=1818 --entry-file=index.html",
    "server:prod": "node server.js",
    "watch:js": "chokidar 'app/react/**/*.js' 'app/react/**/*.jsx' -c 'npm run build:js'",
    "watch:scss": "chokidar 'app/scss/**/*' 'app/react/**/*.scss' -c 'npm run build:scss'",
    "watch:html": "chokidar 'app/index.html' -c 'npm run build:static'",
    "watch:assets": "chokidar 'app/assets/**/*' -c 'npm run build:assets'",
    "test": "npm-run-all test:**",
    "test:js": "eslint --config ./.eslintrc.yaml 'app/react/**/*.js' 'app/react/**/*.jsx' webpack.config.js",
    "test:scss": "stylelint 'app/**/*.scss' --syntax scss"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.4.3",
    "chokidar-cli": "^1.2.0",
    "eslint": "^2.6.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "live-server": "^0.9.2",
    "mofo-style": "^2.4.0",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.7.0",
    "postcss-cli-simple": "^1.0.1",
    "stylelint": "^5.3.0",
    "stylelint-config-standard": "^5.0.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "classnames": "2.2.3",
    "mozmaker": "0.7.0",
    "pushstate-server": "1.8.1",
    "react": "15.0.1",
    "react-dom": "15.0.1",
    "react-router": "2.2.4"
  }
}
