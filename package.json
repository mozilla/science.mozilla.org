{
  "name": "science.mozilla.org",
  "version": "1.0.0",
  "description": "Mozilla Science",
  "author": "Mozilla",
  "license": "MPL-2.0",
  "repository": "mozilla/science.mozilla.org",
  "engines": {
    "node": "^5.0.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "start": "npm i && npm run build && npm-run-all --parallel server:dev watch:**",
    "build": "npm run build:config && npm run build:js && npm run build:scss && npm run build:static && npm run build:assets",
    "build:config": "node build-config.js > config/env.generated.json",
    "build:js": "webpack --optimize-minimize",
    "build:scss": "node-sass app/scss/main.scss dist/css/main.css && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/main.css dist/css/main.css",
    "build:static": "cp -r node_modules/mofo-bootstrap/dest/css dist/ && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/mofo-bootstrap.css dist/css/mofo-bootstrap.css && cp app/index.html dist/index.html",
    "build:assets": "cp -r app/assets dist/ && cp app/favicon.ico dist/",
    "server:dev": "live-server ./dist --port=1818 --entry-file=index.html",
    "server:prod": "node server.js",
    "watch:js": "chokidar 'app/js/**/*.js' 'app/react/**/*.js' 'app/react/**/*.jsx' -c 'npm run build:js'",
    "watch:config": "chokidar '.env' 'config/*.env' -c 'npm run build:js'",
    "watch:scss": "chokidar 'app/scss/**/*' 'app/react/**/*.scss' -c 'npm run build:scss'",
    "watch:html": "chokidar 'app/index.html' -c 'npm run build:static'",
    "watch:assets": "chokidar 'app/assets/**/*' -c 'npm run build:assets'",
    "test": "npm-run-all test:**",
    "test:js": "eslint --config ./.eslintrc.yaml 'app/js/**/*.js' 'app/react/**/*.js' 'app/react/**/*.jsx' webpack.config.js",
    "test:scss": "stylelint 'app/**/*.scss' --syntax scss",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.4.3",
    "chokidar-cli": "^1.2.0",
    "classnames": "2.2.3",
    "eslint": "2.9.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "habitat": "^3.1.2",
    "json-loader": "^0.5.4",
    "live-server": "^0.9.2",
    "mofo-bootstrap": "1.0.1",
    "mofo-style": "^2.4.0",
    "mofo-ui": "1.3.0",
    "moment": "2.13.0",
    "moment-timezone": "0.5.4",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.7.0",
    "postcss-cli-simple": "^1.0.1",
    "pushstate-server": "1.8.1",
    "rc-collapse": "1.6.3",
      "react": "15.3.2",
    "react-debounce-input": "^2.4.0",
    "react-dom": "15.3.2",
    "react-hamburger-menu": "alanmoo/react-hamburger-menu#0.0.5",
    "react-router": "2.4.1",
    "react-router-scroll": "0.2.0",
    "webpack": "^1.12.14"
  },
  "devDependencies": {
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.2"
  }
}
